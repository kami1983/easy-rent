
.card {
  border-radius: 10px;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  margin: 10px;
}
.card-image {
  width: 100%;
  height: 200px;
}
.card-content {
  padding: 10px;
  display: flex;
  flex-direction: column;
}
.card-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}
.card-details, .card-address {
  font-size: 14px;
  color: #666;
}
